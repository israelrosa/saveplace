{
   "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "strictPropertyInitialization": false,
      "baseUrl": "./src",
      "allowJs": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true
   },
   "exclude": [
      "docs/*",
      "coverage/*",
      "jest.config.js",
      "prettier.config.js"
   ]
}
